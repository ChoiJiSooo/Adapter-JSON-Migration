              <Button id="btn_close" taborder="2" top="8" height="20" cssclass="btn_POP_X" right="10" width="20" onclick="div_alert_btn_close_onclick"/>
              <Static id="sta_alert" taborder="3" text="시스템오류가 발생하였습니다.관리자에게 문의하시기 바랍니다." left="17" top="90" cssclass="sta_alert_Txt" wordWrap="char" usedecorate="true" right="19" bottom="60" onclick="div_alert_sta_alert_onclick"/>
