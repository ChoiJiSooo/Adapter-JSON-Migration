            <Layout>
              <Static id="sta_00" taborder="4" left="100" top="20" height="60" right="100" cssclass="sta_alert_Confirm"/>
              <Button id="btn_ok" taborder="0" text="확인" height="24" cssclass="btn_WF_Point2" onclick="div_alert_btn_ok_onclick" right="61" width="48" bottom="10"/>
