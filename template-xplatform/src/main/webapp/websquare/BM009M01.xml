 * @description 조회된 데이터의 개수 출력
 * @param {Object} e 공휴일 조회 Submission 후 실행되는 callback 함숨
 * @hidden N
 */
scwin.sbm_holiday_submitdone = function (e) {

};



/**
 * @event
 * @name btn_cancel_onclick
 * @description GridView에 새로 생성된 행의 모든 정보가 삭제된다
 */
scwin.btn_cancel_onclick = function (e) {
    $c.data.undoGridView(grd_holiday);
};

/**
 * @method
 * @name validateCode
 * @description 코드의 필수 입력 정보를 체크한다. (유효성검사관련)
 * @returns {boolean} 유효성 검사 결과 반환[true, false] 
 * @hidden N
 * @exception 
 */
scwin.validateCode = function () {
    let valInfo = [
        { id: "REST_DATE", mandatory: true },
        { id: "REST_CODE", mandatory: true },
        { id: "REST_NAME", mandatory: true }
    ];
    return $c.data.validateGridView(grd_holiday, valInfo);
};

/**
 * @method
 * @name saveHoliday
 * @description 유효성 검사 후 공휴일 목록을 저장한다
 * @hidden N
 * @exception 
 */
scwin.saveHoliday = function () {
    if (scwin.validateCode()) {
        $c.sbm.execute(sbm_save);
    }
};

/**
 * @event
 * @name btn_save_onclick
 * @description 공휴일 목록 데이터 저장 클릭
 */
scwin.btn_save_onclick = async function (e) {
    if ($c.data.isModified(dlt_holiday)) {
        if (await $c.win.confirm($c.data.getMessage("MSG_CM_00031"))) {
            scwin.saveHoliday();
        }
    } else {
        $c.win.alert($c.data.getMessage("MSG_CM_00032"));
    }
};

/**
 * @method
 * @name sbm_save_submitdone
 * @description 공휴일 목록 저장 후 실행되는 callback Function
 * @param {Object} e 공휴일 저장 Submission 결과를 담은 객체
 * @hidden N
 * @exception 
 */
scwin.sbm_save_submitdone = function (e) {
    if ($c.sbm.getResultCode(e) == $c.sbm.getMessageCode('STATUS_SUCCESS')) {
        scwin.btn_search_onclick();
    }
};

/**
 * @event
 * @name btn_addGrpCell_onclick
 * @description 공휴일 목록 추가
 */
scwin.btn_addGrpCell_onclick = async function (e) {
