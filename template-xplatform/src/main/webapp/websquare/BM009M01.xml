    const options = {
        id: "ProgramSearchPopup",
        popupName: "프로그램 목록 조회",
        modal: true,
        width: 960, height: 450
    };
    await $c.win.openPopup("/ui/BM/insert.xml", options, data);
};


scwin.callbackProgramSearch = function ()
{
    scwin.btn_search_onclick();
}

